<p id="notice"><%= notice %></p>

<h1>Orders table</h1>

<table>
  <thead>
    <tr>
      <th>Client</th>
      <th>Merchant Name</th>
      <th>Merchant Address</th>
      <th>Product Description</th>
      <th>Product Price</th>
      <th>Quantity</th>
      <th>Total Price</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @orders.each do |order| %>
      <tr>
        <td><%= order.client %></td>
        <td><%= order.product.merchant.name %></td>
        <td><%= order.product.merchant.address %></td>
        <td><%= order.product.description %></td>
        <td>$ <%= sprintf('%.2f', order.product.price) %></td>
        <td><%= order.quantity %></td>
        <td>$ <%= sprintf('%.2f', order.total_price) %></td>
        <td><%= link_to 'Show', order %></td>
        <td><%= link_to 'Edit', edit_order_path(order) %></td>
        <td><%= link_to 'Delete', order, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

